# Cache Control Headers para forzar actualización
<IfModule mod_headers.c>
    # Service Worker: sin cache fuerte
    <Files "sw.js">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </Files>
    # Prevenir cache para archivos HTML
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
    
    # Prevenir cache para archivos de datos
    <FilesMatch "\.(txt|json)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
    
    # Cache corto para CSS y JS con versioning
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=3600"
    </FilesMatch>
    
    # Cache largo para imágenes (no cambian frecuentemente)
    <FilesMatch "\.(jpg|jpeg|png|gif|ico|svg)$">
        Header set Cache-Control "public, max-age=86400"
    </FilesMatch>
    
    # Cabeceras de seguridad (no bloquean recursos actuales)
    Header always set X-Content-Type-Options "nosniff"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set Permissions-Policy "interest-cohort=(), geolocation=(), microphone=(), camera=()"
    # HSTS solo sobre HTTPS
    Header always set Strict-Transport-Security "max-age=31536000" env=HTTPS
</IfModule>

# Configuración adicional para Apache
<IfModule mod_expires.c>
    ExpiresActive On
    
    # HTML y archivos de datos sin cache
    ExpiresByType text/html "access plus 0 seconds"
    ExpiresByType text/plain "access plus 0 seconds"
    ExpiresByType application/json "access plus 0 seconds"
    
    # CSS y JS con cache corto
    ExpiresByType text/css "access plus 1 hour"
    ExpiresByType application/javascript "access plus 1 hour"
    
    # Imágenes con cache más largo
    ExpiresByType image/png "access plus 1 day"
    ExpiresByType image/jpg "access plus 1 day"
    ExpiresByType image/jpeg "access plus 1 day"
    ExpiresByType image/gif "access plus 1 day"
    ExpiresByType image/svg+xml "access plus 1 day"
ExpiresDefault "access plus 0 seconds"
</IfModule>

# Alias /guia -> /guia.html para URL corta
<IfModule mod_rewrite.c>
    RewriteEngine On
    # Si la petición no es un archivo físico
    RewriteCond %{REQUEST_FILENAME} !-f
    # Redirigir /guia y /guia/ a /guia.html
    RewriteRule ^guia/?$ guia.html [L]
</IfModule>