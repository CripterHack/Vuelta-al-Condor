# Cache Control Headers para forzar actualización
<IfModule mod_headers.c>
    # Service Worker: sin cache fuerte
    <Files "sw.js">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </Files>
    # Prevenir cache para archivos HTML
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
    
    # Prevenir cache para archivos de datos
    <FilesMatch "\.(txt|json)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
    
    # Cache más largo para estáticos con versioning en nombre/consulta
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=604800, immutable"
    </FilesMatch>
    
    # Cache largo para imágenes (no cambian frecuentemente)
    <FilesMatch "\.(jpg|jpeg|png|gif|ico|svg)$">
        Header set Cache-Control "public, max-age=2592000, immutable"
    </FilesMatch>
    
    # Cabeceras de seguridad (no bloquean recursos actuales)
    Header always set X-Content-Type-Options "nosniff"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set Permissions-Policy "interest-cohort=(), geolocation=(), microphone=(), camera=()"
    Header always set Cross-Origin-Opener-Policy "same-origin"
    # HSTS solo sobre HTTPS
    Header always set Strict-Transport-Security "max-age=31536000" env=HTTPS
    
    # Content Security Policy (producción)
    # Nota: esta política coincide con la usada por el dev server en modo estricto
    # y con las metas en HTML. No permite eval ni inline; habilita Analytics/GTM y Google Fonts.
    Header set Content-Security-Policy "default-src 'self'; img-src 'self' data: blob: https://www.google-analytics.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; style-src-elem 'self' 'unsafe-inline' https://fonts.googleapis.com; style-src-attr 'unsafe-inline'; font-src 'self' https://fonts.gstatic.com; script-src 'self' https://www.googletagmanager.com; script-src-elem 'self' https://www.googletagmanager.com; script-src-attr 'none'; connect-src 'self' https://www.google-analytics.com https://www.googletagmanager.com; worker-src 'self'; media-src 'self'; manifest-src 'self'; frame-src 'self'; form-action 'self'; object-src 'none'; base-uri 'none'; frame-ancestors 'self'; upgrade-insecure-requests;"

    # Report-To y Report-Only para capturar violaciones sin bloquear
    # Report-To (Reporting API) solo se envía bajo HTTPS
    Header set Report-To '{"group":"csp","max_age":86400,"endpoints":[{"url":"https://condor.izignamx.com/reports/csp-report.php"}]}' env=HTTPS
    # Reporting-Endpoints (sintaxis más nueva, compatible con algunos navegadores)
    Header set Reporting-Endpoints 'csp="https://condor.izignamx.com/reports/csp-report.php"' env=HTTPS
    # CSP Report-Only copia de la política, sin bloqueo, solo reporte
    Header set Content-Security-Policy-Report-Only "default-src 'self'; img-src 'self' data: blob: https://www.google-analytics.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; style-src-elem 'self' 'unsafe-inline' https://fonts.googleapis.com; style-src-attr 'unsafe-inline'; font-src 'self' https://fonts.gstatic.com; script-src 'self' https://www.googletagmanager.com; script-src-elem 'self' https://www.googletagmanager.com; script-src-attr 'none'; connect-src 'self' https://www.google-analytics.com https://www.googletagmanager.com; worker-src 'self'; media-src 'self'; manifest-src 'self'; frame-src 'self'; form-action 'self'; object-src 'none'; base-uri 'none'; frame-ancestors 'self'; report-uri /reports/csp-report.php; report-to csp;"
</IfModule>

# Configuración adicional para Apache
<IfModule mod_expires.c>
    ExpiresActive On
    
    # HTML y archivos de datos sin cache
    ExpiresByType text/html "access plus 0 seconds"
    ExpiresByType text/plain "access plus 0 seconds"
    ExpiresByType application/json "access plus 0 seconds"
    
    # CSS y JS con cache medio
    ExpiresByType text/css "access plus 7 days"
    ExpiresByType application/javascript "access plus 7 days"
    
    # Imágenes con cache más largo
    ExpiresByType image/png "access plus 30 days"
    ExpiresByType image/jpg "access plus 30 days"
    ExpiresByType image/jpeg "access plus 30 days"
    ExpiresByType image/gif "access plus 30 days"
    ExpiresByType image/svg+xml "access plus 30 days"
ExpiresDefault "access plus 0 seconds"
</IfModule>

# Alias /guia -> /guia.html para URL corta
<IfModule mod_rewrite.c>
    RewriteEngine On
    # Si la petición no es un archivo físico
    RewriteCond %{REQUEST_FILENAME} !-f
    # Redirigir /guia y /guia/ a /guia.html
    RewriteRule ^guia/?$ guia.html [L]
</IfModule>
